# Healthcare AI Gateway - Environment Configuration
# Copy this to .env and fill in your values

# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Security (generate strong keys for production)
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret-min-32-chars-long

# Database (PostgreSQL with SSL required for HIPAA)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/healthcare_gateway

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Audit Logging (must be encrypted storage for HIPAA)
AUDIT_LOG_PATH=/var/log/healthcare-gateway/audit

# Feature Flags
DEBUG=false
MCP_SERVER_ENABLED=true